<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view3"
        android:layout_width="395dp"
        android:layout_height="1.75dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="5dp"
        android:background="#D3D3D3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="차트선택"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/view3"
        app:layout_constraintStart_toStartOf="@+id/guideline10" />

    <Button
        android:id="@+id/chart"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@null"
        android:stateListAnimator="@null"
        android:text="원형그래프"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/chart1_img"
        app:layout_constraintStart_toStartOf="@+id/chart1_img"
        app:layout_constraintTop_toBottomOf="@+id/chart1_img" />

    <Button
        android:id="@+id/chart2"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@null"
        android:stateListAnimator="@null"
        android:text="막대그래프"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/chart2_img"
        app:layout_constraintStart_toStartOf="@+id/chart2_img"
        app:layout_constraintTop_toBottomOf="@+id/chart2_img" />

    <ImageButton
        android:id="@+id/chart1_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="#00000000"
        android:padding="0sp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/guideline10"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:srcCompat="@drawable/round_chart_" />

    <ImageButton
        android:id="@+id/chart2_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="#00000000"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:srcCompat="@drawable/stick_chart" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

</androidx.constraintlayout.widget.ConstraintLayout>